<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="10dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/medsRegisterFragmentMedColor"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medsRegisterFragmentMedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/medNameLabel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medsRegisterFragmentATCclassification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medInfoLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medInfoLabel"
                android:layout_marginHorizontal="4dp"
                android:text="-"/>

            <TextView
                android:id="@+id/medsRegisterFragmentMedCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medInfoLabel"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>
 </LinearLayout>